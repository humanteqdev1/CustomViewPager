<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/dialog_bg_white">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="13dp"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="4sp"
                android:text="asdas d qwr qwer asdas d qwr qwer "
                android:textColor="#de000000"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="12dp"
                android:layout_height="14dp"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:scaleType="fitEnd"
                android:tint="@color/card_text_white"
                app:layout_constraintBottom_toBottomOf="@+id/tv_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_time"
                app:srcCompat="@drawable/ic_timer" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4sp"
                android:text="Время прохождения 5 минут"
                android:textColor="#8a000000"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/iv_time"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="11dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:paddingBottom="64dp"
                android:text="12312 3123 123 123 112312 3123 123 123 112312 3123 123 123 112312 3123 123 123 112312 3123 123 123 112312 3123 123 123 112312 3123 123 123 112312 3123 123 123 112312 3123 123 123 112312 3123 123 123 112312 3123 123 123 112312 3123 123 123 1asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer asdas d qwr qwer sss"
                android:textColor="#de000000"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_time" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>